<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wots.lutmaar.Fragment.SearchResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_shadow"
            android:padding="5dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivSearchResult"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_140sdp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvTitleSearchResult"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:ellipsize="end"
                android:maxLines="4"
                android:paddingLeft="3dp"
                android:text="Medium Text"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="9sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvColdHotSearchResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/Red"
                    android:paddingLeft="3dp"
                    android:textSize="14sp"
                    android:text="200o" />

                <TextView
                    android:id="@+id/tvCommentSearchResult"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_comments_small"
                    android:gravity="center_vertical"
                    android:text=" 10 Comments"
                    android:textSize="9sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
