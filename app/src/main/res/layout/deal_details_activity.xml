<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbarDealDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivDealDetailsShare"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_share" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Deal"
                android:textColor="@color/white"
                android:textSize="12pt"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ivDealDetailsMakeComment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5pt"
                android:src="@drawable/ic_comments_white" />


        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/ivDealDetailsImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/login" />
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="80dp"
                    android:gravity="center_vertical"
                    android:background="#bbFFFFFF"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivDealDetailsHot"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_hot" />

                    <TextView
                        android:id="@+id/tvDealDetailsHotCold"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="200"
                        android:textColor="#ec483c" />

                    <ImageView
                        android:id="@+id/ivDealDetailsCold"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_cold" />

                </LinearLayout>
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivProfileDealDetailsImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/login" />

                <TextView
                    android:id="@+id/tvDealDetailsUserName"
                    android:layout_width="0dp "
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="false"
                    android:text="User Name"
                    android:textColor="@color/ColorPrimary"
                    android:textSize="7pt" />

                <TextView
                    android:id="@+id/tvDealDetailsPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="$350.00"
                    android:textColor="@color/ColorPrimaryDark"
                    android:textSize="10pt" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDealDetailsTitle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Deals Title DATA"
                android:textSize="5pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDealDetailsDetails"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:singleLine="false"
                android:text="Deals Data details"
                android:textSize="5pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvDealDetailsComment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_comments"
                    android:gravity="center_vertical"
                    android:text=" 10 Comments"
                    android:textSize="4pt" />

                <TextView
                    android:id="@+id/tvDealDetailsTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:drawableLeft="@drawable/ic_time"
                    android:gravity="center_vertical"
                    android:text=" Time"
                    android:textSize="4pt" />


            </LinearLayout>

            <Button
                android:id="@+id/btnForgetPass"
                style="@style/btn_login"
                android:layout_marginTop="20dp"
                android:text="TAKE THIS DEAL"
                android:textAllCaps="true" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>