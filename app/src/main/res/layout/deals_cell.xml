<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_95sdp"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDealHotCold"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@color/Red"
                android:gravity="center"
                android:text="200"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ivDealHot"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_hot" />

                <TextView
                    android:id="@+id/tvDealType"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_9sdp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/material_blue_grey_900"
                    android:textSize="4pt" />

                <ImageView
                    android:id="@+id/ivDealCold"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_cold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_75sdp"
                android:layout_marginLeft="3dp">

                <TextView
                    android:id="@+id/tvDealTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:text="Deals Title DATA"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDealDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:singleLine="false"
                    android:text="Deals Data details"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivImageDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tvViewDeal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/rounded_color_textview"
                        android:gravity="center"
                        android:text="JAIN 01"
                        android:textColor="@color/Red"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/tvGetDeal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/green"
                        android:gravity="center"
                        android:text="GET CODE"
                        android:textColor="@color/white"
                        android:visibility="gone" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDealUserName"
                    android:layout_width="0dp "
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="false"
                    android:text="User Name"
                    android:textColor="@color/ColorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDealComment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.5"
                    android:drawableLeft="@drawable/ic_comments_small"
                    android:gravity="center_vertical"
                    android:text=" 10 Comments"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvDealTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.50"
                    android:drawableLeft="@drawable/ic_time_small"
                    android:gravity="center_vertical"
                    android:text=" Time"
                    android:textSize="9sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>