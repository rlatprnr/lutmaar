<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_margin="@dimen/_8sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDealHotCold"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@color/Red"
                android:gravity="center"
                android:text="200"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvDealTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:singleLine="false"
                android:text="Deals Title DATA"
                android:textSize="5pt"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ivDealHot"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_hot" />


                <ImageView
                    android:id="@+id/ivDealCold"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_cold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDealDetails"
                android:layout_width="0dp"
                android:layout_height="@dimen/_75sdp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="5"
                android:layout_marginLeft="5dp"
                android:singleLine="false"
                android:text="Deals Data details"
                android:textSize="5pt" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvViewDeal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/orange"
                    android:gravity="center"
                    android:text="View Deal"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvGetDeal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/Red"
                    android:gravity="center"
                    android:text="Get Deal"
                    android:textColor="@color/white" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDealUserName"
                android:layout_width="0dp "
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="false"
                android:text="User Name"
                android:textColor="@color/ColorPrimary" />

            <TextView
                android:id="@+id/tvDealComment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.5"
                android:drawableLeft="@drawable/ic_comments_small"
                android:gravity="center_vertical"
                android:text=" 10 Comments"
                android:textSize="4pt" />

            <TextView
                android:id="@+id/tvDealTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.50"
                android:drawableLeft="@drawable/ic_time_small"
                android:gravity="center_vertical"
                android:text=" Time"
                android:textSize="4pt" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>