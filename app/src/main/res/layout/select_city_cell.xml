<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tvSelectCityLabel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Select City"
                android:textColor="@color/MenuDarkBlue"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/ivGetCurrentCity"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_36sdp"
                android:padding="5dp"
                android:src="@drawable/ic_location" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/MenuDarkBlue" />

        <EditText
            android:id="@+id/etSearchCity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_rounded_corner"
            android:hint="City name"
            android:textSize="16sp"
            android:paddingLeft="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:layout_marginTop="5dp"
            android:background="@color/WhiteGrey" />

        <ListView
            android:id="@+id/lvSearchCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="@color/WhiteGrey"
            android:dividerHeight="0.1dp" />

    </LinearLayout>
</LinearLayout>