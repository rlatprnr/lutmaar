<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/LLSearchDealPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="@dimen/_64sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivSearchDealsPopup"
                            android:layout_width="@dimen/_64sdp"
                            android:layout_height="@dimen/_64sdp"
                            android:src="@mipmap/ic_launcher" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivSearchDealDetailsImageViewCancelPopup"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:background="@color/black"
                            android:src="@drawable/clear_all_deals" />

                        <TextView
                            android:id="@+id/tvSearchDealTitlePopup"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:text="Title"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/tvSearchDealDetailsPopup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deals details"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_16sdp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvSearchDealReviewsPopup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:text="12 Reviews" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:text="Price:" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvSearchDealDetailsHotColdValuePopupPopup"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@color/Red"
                            android:gravity="center"
                            android:text="200"
                            android:textSize="16sp"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvSearchDealDetailsReviewPointsPopup"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ellipse_orange"
                            android:gravity="center"
                            android:text="3,4"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvSearchDealDetailsShare"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/MenuGreen"
                            android:drawableLeft="@drawable/deal_share"
                            android:drawablePadding="-10dp"
                            android:gravity="center"
                            android:text="Share"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvSearchDealPricePopup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="$200"
                            android:textColor="@color/orange"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_64sdp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/ivSearchDealDetailsHotPopup"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/ic_hot" />

                        <ImageView
                            android:id="@+id/ivSearchDealDetailsColdPopup"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/ic_cold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:gravity="center">
                        <Button
                            android:id="@+id/btnGoToDealDetails"
                            style="@style/btn_login"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="0dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="GO TO DEAL"
                            android:textAllCaps="true"
                            android:textSize="9sp"
                            android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/tvSearchDealCommentPopup"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1.5"
                                android:drawableLeft="@drawable/ic_comments_small"
                                android:gravity="center_vertical"
                                android:text=" 10 Comments"
                                android:textSize="9sp" />

                            <TextView
                                android:id="@+id/tvSearchDealTimePopup"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.50"
                                android:drawableLeft="@drawable/ic_time_small"
                                android:gravity="center_vertical"
                                android:text=" Time"

                                android:textSize="9sp" />


                            <ImageView
                                android:id="@+id/tvSearchDealGetPopup"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:src="@drawable/ic_get_deal" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>