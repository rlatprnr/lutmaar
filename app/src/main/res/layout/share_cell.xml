<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_25sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvDealTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Share the best deals with your friends..."
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/shareFaceBook"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:src="@drawable/icon_facebook_share" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/shareTwitter"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:src="@drawable/icon_twitter_share" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/sharePinterest"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:padding="1.5dp"
                    android:src="@drawable/ic_pinterest_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/shareGoogle"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:padding="1.5dp"
                    android:src="@drawable/ic_googleplus_large" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>