<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDealHotCold"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@color/Red"
                android:gravity="center"
                android:text="200"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvDealTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:singleLine="false"
                android:text="Deals Title DATA"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ivDealHot"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_hot" />

                <TextView
                    android:id="@+id/tvDealType"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_11sdp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/material_blue_grey_900"
                    android:textSize="4pt" />

                <ImageView
                    android:id="@+id/ivDealCold"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_cold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDealDetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:singleLine="false"
                        android:text="Deals Data details"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvViewDeal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@drawable/rounded_color_textview"
                            android:gravity="center"
                            android:text="JAIN 01"
                            android:textColor="@color/Red"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/ivImageDisplay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:src="@drawable/login"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvGetDeal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@color/green"
                            android:gravity="center"
                            android:text="GET CODE"
                            android:textColor="@color/white"
                            android:textSize="14sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDealUserName"
                        android:layout_width="0dp "
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="false"
                        android:text="User Name"
                        android:textColor="@color/ColorPrimary" />

                    <TextView
                        android:id="@+id/tvDealComment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"
                        android:drawableLeft="@drawable/ic_comments_small"
                        android:gravity="center_vertical"
                        android:text=" 10 Comments"
                        android:textSize="4pt" />

                    <TextView
                        android:id="@+id/tvDealTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.50"
                        android:drawableLeft="@drawable/ic_time_small"
                        android:gravity="center_vertical"
                        android:text=" Time"
                        android:textSize="4pt" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>